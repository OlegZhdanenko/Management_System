generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model groups {
  id          String   @id @default(uuid())
  name        String
  createdBy   String?
  created_at  DateTime @default(now())
  creator     user ?    @relation("groupsCreatedByUser", fields: [createdBy], references: [id])
  users       user[]   @relation("UserGroups")
 
}

model user {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role
  token     String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  groupsCreated groups[] @relation("groupsCreatedByUser")
  groups     groups[] @relation("UserGroups")
  notes      notes[]
  
  verify        Boolean  @default(false)
  verifyToken   String?
}

model notes {
  id         String   @id @default(uuid())
  title      String
  content    String
  createdBy  String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user       user    @relation(fields: [createdBy], references: [id],onDelete: Cascade)

}


enum Role {
  ROOT_ADMIN
  ADMIN
  USER
}
